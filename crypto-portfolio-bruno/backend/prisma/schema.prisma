datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ManualHolding {
  id        Int      @id @default(autoincrement())
  symbol    String
  amount    Decimal  @db.Decimal(78, 18)
  wallet    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PortfolioSnapshot {
  id        Int      @id @default(autoincrement())
  totalUsd  Decimal  @db.Decimal(78, 2)
  totalBrl  Decimal  @db.Decimal(78, 2)
  breakdown Json
  createdAt DateTime @default(now())
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
